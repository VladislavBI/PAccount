<div class="table" style="font-size:22px">
    <div ng-init="statistic.init()">
        <h2 style="text-align:center">Total active debts</h2>

        <div class="row">
            <ul class="list-group">
                <li class="list-group-item">
                    Total debit is <span ng-bind="statistic.totalDebit">0</span>$
                </li>
                <li class="list-group-item">
                    Total credit is <span ng-bind="statistic.totalCredit">0</span>$
                </li>
            </ul>
        </div>
    </div>
</div>

