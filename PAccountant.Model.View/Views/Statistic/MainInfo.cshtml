<div class="table" ng-controller="statisticPersonalController as statistic" style="font-size:22px">
    <div ng-init="statistic.init()">
        <div class="row">
            <div style="text-align: center;width: 100%;">
                <h2 style="width: 100%;">Currency balance</h2>
            </div>
        </div>
        <div class="row" style="text-align:center">
            Overall balance: <span ng-bind="statistic.total"></span>$
        </div>
        <br />
        <div class="row" style="width: 100%;">
                <ul class="list-group" style="width: 100%;">
                    <li ng-repeat="operation in statistic.currenciesOperations" class="list-group-item" style="width: 100%;">
                        {{operation.Name}}:{{operation.Sum}}
                    </li>
                </ul>
        </div>
        <div class="row" style="align-content:center">
            <div class="col-lg-3"></div>
            <div class="col-lg-9">
                <button ng-click="statistic.redirectToDetailedSourceInfo()" class="btn btn-success">Detailed info</button>
            </div>
        </div>
    </div>
</div>
