

<script type="text/ng-template" id="addOperationPopup.html">
    <div class="modal-header" ng-init="init()">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div ng-show="isAddOperation">
            <h4>Income operation</h4>
        </div>
        <div ng-show="!isAddOperation">
            <h4>Outcome operation</h4>
        </div>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-3">
                Current date
            </div>
            <div class="col-lg-9">
                <input type="date" ng-model="popUpArguments.date" style="width: 100%;"/>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                Source
            </div>
            <div class="col-lg-5">
                <select ng-model="popUpArguments.source" ng-options="dataRepeat.Name for dataRepeat in popUpArguments.availableSource track by dataRepeat.id" style="width: 100%;"></select>
            </div>
            <div class="col-lg-4">
                <label><input type="checkbox" name="name" ng-model="popUpArguments.newSourceCheckBox" />New</label>
            </div>
        </div>
        <div class="row popup-row" ng-show="validation.variableIsTrue(popUpArguments.newSourceCheckBox)">
            <div class="col-lg-3">
                New source
            </div>
            <div class="col-lg-9">
                <input type="text" ng-model="popUpArguments.newSourceText" style="width: 100%;"/>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                Category
            </div>
            <div class="col-lg-5">
                <select ng-model="popUpArguments.category" ng-options="dataRepeat.Name for dataRepeat in popUpArguments.availableCategory track by dataRepeat.Id" style="width: 100%;"></select>
            </div>
            <div class="col-lg-4">
                <label><input type="checkbox" name="name" ng-model="popUpArguments.newCategoryCheckBox"/>New</label>
            </div>
        </div>
        <div class="row popup-row" ng-show="validation.variableIsTrue(popUpArguments.newCategoryCheckBox)">
            <div class="col-lg-3">
                New category
            </div>
            <div class="col-lg-9">
                <input type="text" ng-model="popUpArguments.newCategoryText" style="width: 100%;"/>
            </div>
        </div>
        @* Currency are preinstalled now *@
        <div class="row popup-row">
            <div class="col-lg-3">
                Currency
            </div>
            <div class="col-lg-5">
                <select name="mySelect" id="mySelect" ng-model="popUpArguments.currency" ng-options="option.Name for option in popUpArguments.availableCurrency track by option.Id" style="width: 100%;"></select>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                Summ
            </div>
            <div class="col-lg-9">
                <input type="number" ng-model="popUpArguments.summ" style="width: 100%;"/>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                Commentary
            </div>
            <div class="col-lg-9">
                <textarea rows="2" ng-model="popUpArguments.commentary" style="width: 100%;"/>
            </div>
        </div>
        @Html.Partial("~/Views/popUp/NewTemplate.cshtml")
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ok()">Ok</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel();">Close</button>
    </div>
</script>