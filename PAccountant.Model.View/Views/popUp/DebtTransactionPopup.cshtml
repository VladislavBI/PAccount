<script type="text/ng-template" id="addDebtTransactionPopup.html">
    <div class="modal-header" ng-init="init()">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>
            Add transaction
        </h2>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-3">
                Transaction date
            </div>
            <div class="col-lg-9">
                <input type="date" ng-model="popUpArguments.date" style="width:100%"/>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                Currency
            </div>
            <div class="col-lg-9">
                <select name="mySelect" id="mySelect" ng-model="popUpArguments.currency" ng-options="option.Name for option in popUpArguments.availableCurrency track by option.Id" style="width:100%"></select>
            </div>
        </div>
        <div class="row popup-row">
            <div class="col-lg-3">
                transaction sum
            </div>
            <div class="col-lg-9">
                <input type="number" ng-model="popUpArguments.summ" style="width:100%"/>
            </div>
        </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ok()">Ok</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel();">Close</button>
    </div>
</script>